{
  "name": "personal-context-router",
  "version": "1.0.0",
  "description": "A microservices monorepo for personal context routing",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint . --cache --max-warnings=0",
    "lint:fix": "eslint . --cache --fix",
    "typecheck": "npm run -ws --if-present typecheck",
    "build": "npm run -ws --if-present build",
    "test": "npm run -ws --if-present test",
    "dev": "npm run -ws --if-present dev --parallel",
    "dev:gateway": "npm run dev --workspace=@personal-context-router/gateway",
    "dev:preference": "npm run dev --workspace=@personal-context-router/preference-service",
    "dev:user": "npm run dev --workspace=@personal-context-router/user-service",
    "dev:mcp": "npm run dev --workspace=@personal-context-router/mcp-service",
    "dev:github": "npm run dev --workspace=@personal-context-router/github-import-service",
    "start": "npm run -ws --if-present start --parallel",
    "clean": "rm -rf node_modules **/node_modules **/dist"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.12.1",
    "@typescript-eslint/parser": "^8.12.1",
    "@eslint/js": "^9.35.0",
    "concurrently": "^8.0.0",
    "eslint": "^9.35.0",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.0.0",
    "globals": "^15.12.0",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.12.1"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "mongodb": "^6.20.0"
  }
}
