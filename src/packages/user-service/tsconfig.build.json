{
  "compilerOptions": {
    "target": "ES2022",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "module": "Node16",
    "moduleResolution": "node16",
    "incremental": true,
    "composite": true,
    "skipLibCheck": true,
    "strict": false,
    "paths": {
      "@personal-context-router/shared": [
        "../shared/dist",
        "../../node_modules/@personal-context-router/shared"
      ],
      "@personal-context-router/shared/*": [
        "../shared/dist/*",
        "../../node_modules/@personal-context-router/shared/*"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"],
  "references": [
    { "path": "../shared" }
  ]
}
