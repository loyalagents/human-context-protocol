{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node10",
    "ignoreDeprecations": "6.0",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": false,
    "paths": {
      "@personal-context-router/shared": [
        "../shared/dist",
        "../../node_modules/@personal-context-router/shared"
      ],
      "@personal-context-router/shared/*": [
        "../shared/dist/*",
        "../../node_modules/@personal-context-router/shared/*"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
